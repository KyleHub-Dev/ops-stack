# --- URLS ---
# CHANGED: specific subdomain
NEXTAUTH_URL=https://langfuse.kylehub.dev
NEXTAUTH_SECRET= # generate: openssl rand -hex 32
SALT= # generate: openssl rand -hex 32
ENCRYPTION_KEY= # generate: openssl rand -hex 32

# --- ZITADEL AUTH ---
AUTH_CUSTOM_ID=zitadel
AUTH_CUSTOM_NAME="Zitadel Login"
AUTH_CUSTOM_ISSUER=https://auth.kylehub.dev
AUTH_CUSTOM_CLIENT_ID= # Get from Zitadel Project
AUTH_CUSTOM_CLIENT_SECRET= # Get from Zitadel Project
AUTH_CUSTOM_SCOPE="openid email profile"

# --- ADMIN AUTO-SETUP ---
LANGFUSE_INIT_ORG_ID=kylehub-org
LANGFUSE_INIT_PROJECT_ID=dno-crawler
LANGFUSE_INIT_USER_EMAIL=admin@kylehub.dev
LANGFUSE_INIT_USER_NAME=Admin
LANGFUSE_INIT_USER_PASSWORD= # Pick a password

# --- INTERNAL CONNECTIONS ---
# Use "postgres" hostname (service name in compose)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres
CLICKHOUSE_URL=http://clickhouse:8123
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse
# Redis Host/Port/Auth (matches compose.yaml)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_AUTH=myredissecret

# --- BLOB STORAGE (MinIO) ---
# MinIO defaults matching compose.yaml
LANGFUSE_S3_EVENT_UPLOAD_BUCKET=langfuse
LANGFUSE_S3_EVENT_UPLOAD_ENDPOINT=http://minio:9000
LANGFUSE_S3_EVENT_UPLOAD_ACCESS_KEY_ID=minio
LANGFUSE_S3_EVENT_UPLOAD_SECRET_ACCESS_KEY=miniosecret
LANGFUSE_S3_EVENT_UPLOAD_REGION=auto
LANGFUSE_S3_EVENT_UPLOAD_FORCE_PATH_STYLE=true

LANGFUSE_S3_MEDIA_UPLOAD_BUCKET=langfuse
# IMPORTANT: This must be accessible from the browser for direct uploads.
# For production, set this to your public MinIO URL (e.g., https://minio.kylehub.dev).
LANGFUSE_S3_MEDIA_UPLOAD_ENDPOINT=http://localhost:9090
LANGFUSE_S3_MEDIA_UPLOAD_ACCESS_KEY_ID=minio
LANGFUSE_S3_MEDIA_UPLOAD_SECRET_ACCESS_KEY=miniosecret
LANGFUSE_S3_MEDIA_UPLOAD_REGION=auto
LANGFUSE_S3_MEDIA_UPLOAD_FORCE_PATH_STYLE=true

LANGFUSE_S3_BATCH_EXPORT_BUCKET=langfuse
LANGFUSE_S3_BATCH_EXPORT_ENDPOINT=http://minio:9000
LANGFUSE_S3_BATCH_EXPORT_ACCESS_KEY_ID=minio
LANGFUSE_S3_BATCH_EXPORT_SECRET_ACCESS_KEY=miniosecret
LANGFUSE_S3_BATCH_EXPORT_REGION=auto
LANGFUSE_S3_BATCH_EXPORT_FORCE_PATH_STYLE=true
